<h2 class="text-center mb-4">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-50 mx-auto border p-4 rounded shadow-sm" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="mb-3">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" },
                  label_html: { class: "form-label" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password" },
                  label_html: { class: "form-label" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" },
                  label_html: { class: "form-label" } %>
    </div>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Sign up", class: "btn btn-success w-100" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
