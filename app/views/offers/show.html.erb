
<div class="plant-card-product card-product">
  <%= cl_image_tag @offer.photo.key, height: 300, width: 300 %>
  <div class="plant-card-product-infos card-product-infos">
    <h2><%= @offer.plant_name %></h2>
    <p><%= @offer.plant_description %></p>
    <p><%= @offer.price %> â‚¬</p>

    <div class="col">
      <% unless user_signed_in? %>
        <%= link_to "Log in to rent this plant", new_user_session_path, class: "btn btn-success" %>
      <% end %>
      <% if user_signed_in? && current_user.id != @offer.user_id && @already_booked.empty? %>
        <%= link_to "Rent this plant", new_booking_path(@offer), class: "btn btn-success" %>
      <% end %>
      <% if user_signed_in? && current_user.id == @offer.user_id%>
        <%= link_to "Edit", edit_offer_path, class: "btn btn-flat-secondary" %>
        <%= link_to "Delete", offer_path(@offer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      <% end %>


    </div>

  </div>
</div>
