
<div class="card-product">
  <%= cl_image_tag @offer.photo.key, height: 300, width: 300 %>
  <div class="card-product-infos">
    <h2><%= @offer.plant_name %></h2>
    <p><%= @offer.plant_description %></p>
    <p><%= @offer.price %> â‚¬</p>

    <div class="col">
      <%= link_to "Rent", "#", class: "btn btn-flat" %>
