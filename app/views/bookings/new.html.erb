<%= simple_form_for([@offer, @booking], url: new_booking_path(@offer)) do |f| %>
  <%= f.input :comment %>
  <%= f.input :duration, as: :integer, label: "Duration (in months)", input_html: { min: 1, step: 1, placeholder: "Enter duration in months" } %>
  <%= f.button :submit, 'Rent this plant', class: 'btn btn-success' %>
<% end %>
