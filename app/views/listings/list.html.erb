<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="listings-tab" data-bs-toggle="tab" data-bs-target="#listings-tab-pane" type="button" role="tab" aria-controls="listings-tab-pane" aria-selected="true">My listings</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="user-requests-tab" data-bs-toggle="tab" data-bs-target="#user-requests-tab-pane" type="button" role="tab" aria-controls="user-requests-tab-pane" aria-selected="false">Incoming requests</button>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active mt-3" id="listings-tab-pane" role="tabpanel" aria-labelledby="listings-tab" tabindex="0">
    <p>Active listings</p>
    <div class="container">
      <div class="row">
        <% @active_offers.each do |offer| %>
          <div class="col-md-3 mb-4">
            <%= link_to offer_path(offer) do %>
              <%= render "shared/plant_card_listings", offer: offer %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <hr>
    <p>Past listings</p>
    <div class="container">
      <div class="row">
        <% @past_offers.each do |offer| %>
          <div class="col-md-3 mb-4">
            <%= link_to offer_path(offer) do %>
              <%= render "shared/plant_card", offer: offer %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade  mt-3" id="user-requests-tab-pane" role="tabpanel" aria-labelledby="user-requests-tab" tabindex="0">
    <p>Pending user requests</p>
    <div class="container">
      <div class="row">
        <% @pending_requests.each do |request| %>
          <div class="mb-4">
            <%= render "shared/request_card", offer: request.offer, request: request %>
          </div>
        <% end %>
      </div>
    </div>
    <hr>
    <p>Accepted user requests</p>
    <div class="container">
      <div class="row">
        <% @accepted_requests.each do |request| %>
          <div class="mb-4">
            <%= render "shared/request_card", offer: request.offer, request: request %>
          </div>
        <% end %>
      </div>
    </div>
    <hr>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Rejected user requests
    </button>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        [placeholder]
      </div>
    </div>
  </div>
</div>
